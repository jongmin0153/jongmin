<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- main -->
	<definition name="main" template="/WEB-INF/views/layout/main.jsp">
		<put-attribute name="asset_main" value="/WEB-INF/views/inc/asset_main.jsp"></put-attribute>
		<put-attribute name="content_main" value="/WEB-INF/views/page/main/content_main.jsp"></put-attribute>
	</definition>
	
	<!-- mypage -->
	<definition name="mypage" template="/WEB-INF/views/layout/mypage.jsp">
		<put-attribute name="asset_main" value="/WEB-INF/views/inc/asset_main.jsp"></put-attribute><!-- 기본 세팅 링크 -->
		<put-attribute name="header_main" value="/WEB-INF/views/inc/header_main.jsp"></put-attribute><!-- 상단 메뉴 -->
		<put-attribute name="content_mypage" value="/WEB-INF/views/page/main/content_mypage.jsp"></put-attribute><!-- 캘린더, 팀, 프로젝트 -->
	</definition> 
	
	
	<definition name="editor" template="/WEB-INF/views/layout/editor.jsp">
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
		<put-attribute name="asset_edtior" value="/WEB-INF/views/inc/asset_editor.jsp"></put-attribute>
		<put-attribute name="asset_chat" value="/WEB-INF/views/inc/asset_chat.jsp"></put-attribute>
		<put-attribute name="asset_bot" value="/WEB-INF/views/inc/asset_bot.jsp"></put-attribute>
		
		<put-attribute name="main_header" value="/WEB-INF/views/inc/header_main.jsp"></put-attribute>
		<put-attribute name="editor_header" value="/WEB-INF/views/inc/header_editor.jsp"></put-attribute>
		
		<put-attribute name="left_side" value="/WEB-INF/views/page/editor/explorer.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/page/editor/editor.jsp"></put-attribute>
		<put-attribute name="console" value="/WEB-INF/views/page/editor/console.jsp"></put-attribute>
		
		<put-attribute name="settings" value="/WEB-INF/views/page/editor/settings.jsp"></put-attribute>
		<put-attribute name="right_side" value="/WEB-INF/views/layout/right_side.jsp"></put-attribute>
		
		<put-list-attribute name="popups">
			<add-attribute value="/WEB-INF/views/page/editor/new.jsp" />
			<add-attribute value="/WEB-INF/views/page/editor/record.jsp" />
			<add-attribute value="/WEB-INF/views/page/editor/version.jsp" />
			<add-attribute value="/WEB-INF/views/page/editor/settings.jsp" />
		</put-list-attribute>
	</definition>
</tiles-definitions>